      {
        "label" : "AmalgamateTransction",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
        "callback" : "benchmark/smallbank/amalgamateTransaction.js"
      },
      {
        "label" : "Query",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
        "callback" : "benchmark/smallbank/query.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
