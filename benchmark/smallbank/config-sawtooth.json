{
   "blockchain": {
    "type": "sawtooth",
    "config": "benchmark/simple/sawtooth.json"
  },
  "test": {
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [{
        "label" : "CreateAccount",
        "txNumber" : [50],
