        "arguments": {},
        "callback" : "benchmark/smallbank/createAccount.js"
      },
      {
        "label" : "DepositChecking",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
        "callback" : "benchmark/smallbank/depositChecking.js"
      },
      {
        "label" : "WriteCheck",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
        "callback" : "benchmark/smallbank/writeCheck.js"
      },
      {
        "label" : "TransactSavings",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
        "callback" : "benchmark/smallbank/transactSavings.js"
      },
      {
        "label" : "SendPayment",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}],
        "arguments": {},
