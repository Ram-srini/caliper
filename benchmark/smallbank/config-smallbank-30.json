{
   "blockchain": {
        "type": "sawtooth",
        "config": "benchmark/smallbank/sawtooth.json"
  },
  "test": {
    "name": "smallbank",
    "description" : "This is smallbank benchmark for caliper",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [
      {
        "label" : "smallOperations",
        "txNumber" : [10000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 30}}],
        "arguments": {"accounts":1000, "txnPerBatch":30},
        "callback" : "benchmark/smallbank/smallbankOperations.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
